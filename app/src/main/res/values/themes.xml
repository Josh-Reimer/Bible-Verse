<resources>
    <style name="Theme.VerseApp" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Use surface as the primary so the toolbar isn't purple -->
        <item name="colorPrimary">@color/app_surface</item>
        <item name="colorOnPrimary">@color/app_on_surface</item>
        <item name="colorPrimaryContainer">@color/green_700_primary</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
        <!-- Make all surfaces match your appâ€™s background -->
        <item name="colorSurface">@color/app_surface</item>
        <item name="colorOnSurface">@color/app_on_surface</item>

        <!-- Transparent system bars so toolbar + status bar match -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Disable Material3 status bar tint -->
        <item name="statusBarForeground">@null</item>
        <!-- Auto-adjust system bar icons -->

        <item name="android:windowLightNavigationBar">?attr/isLightTheme</item>
        <!-- Light mode status bar -->

        <item name="android:windowLightStatusBar">true</item>





        <!-- AppCompat requirements -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>
</resources>